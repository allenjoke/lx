<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/running_back_land" />

    <FrameLayout
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="20px">


        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@color/white"
            android:layout_width="80px"
            android:layout_height="80px" />

        <ImageView
            android:id="@+id/userIcon"
            android:src="@drawable/touxiang_img"
            android:layout_width="80px"
            android:layout_height="80px" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/btn_lianjie"
        android:layout_marginTop="30px"
        android:layout_marginRight="50px"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/equipmentImg"
            android:src="@drawable/icon_bluetooth_off"
            android:layout_width="40px"
            android:layout_height="50px"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15px" />

        <TextView
            android:id="@+id/equipmentNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_device"
            android:textColor="@color/white"
            android:textSize="25px"
            android:gravity="center" />

    </LinearLayout>


    <TextView
        android:id="@+id/userNameText"
        android:layout_marginTop="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="25px"
        android:layout_marginLeft="140px"
        android:gravity="center" />


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="900px"
        android:layout_height="250px"
        android:layout_margin="100px">


        <LinearLayout


            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/eHealth"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50px"
                android:layout_marginLeft="50px"
                android:background="@drawable/home_item_bg_selector">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ehealth" />


                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="eHealth"
                        android:textColor="@color/white"
                        android:textSize="40px"
                        android:textStyle="bold"
                        android:layout_marginTop="5px"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"

                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_item_bg_selector" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kino_map"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50px"
                android:layout_marginLeft="50px"
                android:background="@drawable/home_item_bg_selector">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:layout_weight="1"

                        android:src="@drawable/kino_map"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="kinomap"
                        android:textSize="40px"
                        android:textStyle="bold"
                        android:layout_marginTop="5px"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"

                        />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_item_bg_selector" />

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="50px"
        android:layout_marginLeft="50px"
        android:layout_gravity="left|bottom"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_item_bg_selector"
        >

        <ImageView
            android:id="@+id/language_img"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20px"
            android:src="@drawable/ch" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_heart_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="50px"
        android:layout_marginBottom="50px"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/heart_rate"
            android:src="@mipmap/icon_heart_rate_unconnected"
            android:layout_width="50px"
            android:layout_height="50px"
            android:padding="3px"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15px" />


        <TextView
            android:id="@+id/heart_rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heart_rate_bracelet"
            android:textColor="@color/white"
            android:textSize="25px"
            android:gravity="center" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>


</FrameLayout>