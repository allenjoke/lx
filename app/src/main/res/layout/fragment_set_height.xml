<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:tools="http://schemas.android.com/tools"
             android:clickable="true">

    <ImageView
        android:id="@+id/back_img"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:layout_width="60px"
        android:layout_height="60px"
        android:rotation="180"
        android:src="@drawable/black_right_arrow" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="117px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_height"
            android:textColor="#ff2a2a2a"
            android:textSize="36px"/>

        <TextView
            android:id="@+id/mHeightTextView"
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="84"
            android:textColor="#ff079bff"
            android:textSize="42px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CM"
            android:textColor="#ff2a2a2a"
            android:textSize="36px"/>
    </LinearLayout>

    <com.yuedong.apps.treadmill.ui.view.ScaleView
        android:id="@+id/mScaleView"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_marginTop="280px"
        />



    <ImageView
        android:layout_width="42px"
        android:layout_height="266px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="236px"
        android:scaleType="fitXY"
        android:src="@drawable/shengao_zhishiqi_lanse_img"/>



</FrameLayout>