<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/bg_mian">

    <include layout="@layout/include_homepage_title_layout" />

    <LinearLayout

        android:layout_marginTop="50px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/border_bottom"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/treadmill"
                android:layout_margin="30px"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/running_distance"
                        android:layout_gravity="right" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="24sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/running_distance" />

                </LinearLayout>

                <TextView

                    android:id="@+id/running_distance"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0.00"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/border_bottom"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal"
            android:layout_marginBottom="10px">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/running_time" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="24sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/running_time" />

                </LinearLayout>

                <TextView
                    android:id="@+id/running_time"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="00:00"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/runnig_kcal" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="24sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/running_kcal" />

                </LinearLayout>

                <TextView
                    android:id="@+id/running_kcal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/border_bottom"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:orientation="horizontal"
            android:layout_marginBottom="10px">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/running_speed" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="24sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/running_speed" />

                </LinearLayout>

                <TextView
                    android:id="@+id/running_speed"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0.0"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >


                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/running_incline" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="24sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/running_incline" />


                </LinearLayout>

                <TextView
                    android:id="@+id/running_incline"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="left|center_vertical"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/running_bmp" />

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="24sp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/running_bmp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/running_bmp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:background="@drawable/live_bottom_img"
        android:layout_height="280px">


        <ImageView
            android:id="@+id/start_running"
            android:layout_width="200px"
            android:layout_height="120px"
            android:src="@drawable/start_running"
            android:layout_marginTop="20px"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/running_state"
            android:visibility="gone"
            android:layout_marginLeft="220px"
            android:layout_marginRight="220px"
            android:layout_gravity="center"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="140px">

            <ImageView
                android:id="@+id/running_pause"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pause_running"
                android:layout_marginRight="15px" />

            <ImageView
                android:id="@+id/running_stop"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/stop_running"
                android:layout_marginLeft="15px" />


        </LinearLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/running_report"
            android:layout_width="200px"
            android:layout_height="68dp"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="20px"
            android:layout_marginRight="100px"
            android:layout_marginBottom="70px">

            <ImageView
                android:layout_width="40px"
                android:layout_height="45px"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="155px"
                android:layout_marginBottom="20px"
               />

            <LinearLayout
                android:layout_marginTop="5px"
                android:layout_width="wrap_content"
                android:layout_height="45px"
                android:layout_gravity="right|bottom"
                android:layout_marginLeft="44px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|left"
                    android:text="@string/running_huqugeren"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/running_baogao"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />
            </LinearLayout>


        </RelativeLayout>


    </FrameLayout>

    <FrameLayout
        android:id="@+id/selectorEquipment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/mCountNumberText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/black"
        android:gravity="center"
        android:text="3"
        android:textColor="@android:color/white"
        android:layout_marginBottom="-70px"
        android:textSize="180dp"
        android:visibility="gone" />


</FrameLayout>
