<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90px"
    xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/top_bar_back"
        android:layout_width="100px"
        android:layout_height="60px"
        android:layout_marginLeft="10px"
        android:layout_gravity="center_vertical"
        android:src="@drawable/white_left_arrow" />

    <FrameLayout
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginLeft="120px"
        android:layout_gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:src="@color/white" />
        <ImageView
            android:id="@+id/top_bar_img"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/zhu" />
    </FrameLayout>



    <TextView
        android:id="@+id/top_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="215px"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/live_top_running_img" />


    <LinearLayout
        android:layout_marginRight="50px"
        android:layout_gravity="right|center_vertical"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/top_bar_lianjie"
            android:src="@drawable/icon_bluetooth_off"
            android:layout_width="40px"
            android:layout_height="50px"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15px" />

       <LinearLayout
           android:visibility="gone"
           android:id="@+id/top_bar_Fragment"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/top_bar_equipmentImg"
               android:src="@drawable/treadmill"
               android:layout_width="40px"
               android:layout_height="50px"
               android:layout_gravity="right|center_vertical"
               android:layout_marginRight="15px" />

           <TextView
               android:id="@+id/top_bar_equipmentNameText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/my_device"
               android:textColor="@color/white"
               android:textSize="25px"
               android:layout_gravity="center_vertical"
               android:gravity="center" />
       </LinearLayout>
    </LinearLayout>

</FrameLayout>
