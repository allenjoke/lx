<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/running_back_land"
    android:clickable="true"
    tools:context=".ui.fragment.RealListFragment">

   <include layout="@layout/top_bar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="160px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_width="match_parent"
        android:layout_height="400px">

        <LinearLayout
            android:layout_marginRight="20px"
            android:id="@+id/lasi"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/lasiweijiasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="4"
                android:text="@string/lasiweijiasi"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="20px"
            android:id="@+id/yali"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/yalisangna"

                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="4"
                android:text="@string/guojiagongyuan"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/realPlayFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/selectorEquipment_real_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>