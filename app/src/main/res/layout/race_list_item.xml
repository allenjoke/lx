<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250px"
    android:id="@+id/race_list_bg"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="5px"
    android:background="@drawable/grey_corner">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="120px"
        android:layout_height="80px">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="match_parent"
                    android:src="@color/white" />

                <ImageView
                    android:layout_margin="5px"
                    android:id="@+id/race_list_img"
                    android:src="@drawable/pic_02_01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <ImageView
                android:layout_margin="6px"
                android:id="@+id/race_list_type"
                android:layout_weight="1"
                android:src="@drawable/bike"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <TextView
            android:id="@+id/race_list_name"
            android:layout_marginTop="5px"
            android:layout_marginLeft="5px"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:lines="1"
            android:gravity="center_vertical"
            android:textSize="14px"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/race_list_meters"
        android:gravity="center|right"
        android:textSize="28px"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginRight="10px" />


</LinearLayout>
